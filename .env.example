# Copiar este archivo como .env y completar los valores reales.
# NUNCA commitear el archivo .env al repositorio.

# ── Base de datos ─────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=3306
DB_NAME=alma_platform
# Usar un usuario con permisos mínimos (SELECT, INSERT, UPDATE, DELETE).
# Crear con:
#   CREATE USER 'alma_app'@'localhost' IDENTIFIED BY 'tu-password-seguro';
#   GRANT SELECT, INSERT, UPDATE, DELETE ON alma_platform.* TO 'alma_app'@'localhost';
DB_USER=alma_app
DB_PASSWORD=CAMBIAR-POR-PASSWORD-SEGURO

# ── API ───────────────────────────────────────────────────────────────
# Siempre 127.0.0.1 en producción (solo accesible desde localhost).
API_HOST=127.0.0.1
API_PORT=8001
API_RELOAD=False

# ── Seguridad ──────────────────────────────────────────────────────────
# Clave compartida entre Next.js y FastAPI.
# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
# El mismo valor debe estar en el .env.local del frontend como INTERNAL_API_KEY.
INTERNAL_API_KEY=CAMBIAR-POR-CLAVE-ALEATORIA-LARGA

# ── CORS ───────────────────────────────────────────────────────────────
# Dominio real del frontend. En producción, reemplazar localhost por el dominio.
CORS_ORIGINS=https://tu-dominio.com
